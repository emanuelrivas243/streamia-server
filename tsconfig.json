{
  "compilerOptions": {
    "target": "ES2022",                    /* Versión moderna de JS que compilará */
    "module": "NodeNext",                  /* Soporta imports/exports de ESM */
    "moduleResolution": "NodeNext",        /* Resolver módulos al estilo ESM */
    "esModuleInterop": true,               /* Permite usar imports de CommonJS */
    "forceConsistentCasingInFileNames": true,
    "strict": true,                        /* Reglas estrictas de TypeScript */
    "skipLibCheck": true,                  /* Ignora chequeo de types internos */
    "outDir": "./dist",                    /* Carpeta de salida del JS compilado */
    "rootDir": "./src"                     /* Carpeta principal del código fuente */
  },
  "include": ["src"],                      /* Solo compila lo que esté en /src */
  "exclude": ["node_modules"]              /* Ignora dependencias */
}
